<%= form_for(@comment) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :pin %><br>
    <%= f.collection_select :pin_id, Pin.all, :id, :description  %>
  </p>

  <p>
     <%= f.submit "Some Pig!", class: "btn btn-primary btn-custom" %>
  </p>
<% end %>
