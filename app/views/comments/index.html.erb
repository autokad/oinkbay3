<h3>Listing comments</h3>
 
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th>Title</th>
    <th>body</th>
	<th>User</th>
	<th>Edit</th>
	<th>Exterminate</th>
	<th>PIN</th>
  </tr>
 </thead>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= link_to comment.id, comment %></td>
      <td><%= comment.body %></td>
	  <td><%= link_to comment.user.username, comment.user %></td>
	  <td><%= link_to "edit", edit_comment_path(comment.id) %></td>
	  <td><% if current_user.id == comment.user_id %> <%= link_to "delete", comment, method: :delete %> <% end %></td>
	  <!--td><%= comment.pin_id %></td-->
	   <td><%= link_to comment.pin.description, comment.pin %></td>
    </tr>
  <% end %>
</table>