<!-- NAVBAR
    ================================================== -->
    <div class="navbar-wrapper">
      <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
      <div class="container">

        <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <!-- navbar-inverse before navbarfixedtop Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to(image_tag("somepiglogo.png", :class => "brand"), root_path) %>
            <div class="nav-collapse collapse">
              
              <ul class="nav">
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "About", about_path %></li>
				<li><%= link_to "Gallery", gallery_path %></li>
              </ul>
                <ul class="nav pull-right">    
                  <% if user_signed_in? %>
                    <li><p class="nav navbar-text"><small>Hi <%= link_to current_user.firstname, edit_user_registration_path %>!</small></li>
                    <li><%= link_to "My Page", mypage_path %></li>
                    <li><%= link_to "Add +", new_pin_path %></li>
                    <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                    <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li></p>
                  <% else %>     
                    <li><%= link_to "Sign Up", new_user_registration_path %></li>
                    <li><%= link_to "Login", new_user_session_path %></li>
					<li><%= link_to image_tag("facebook_login.png"), user_omniauth_authorize_path(:facebook) %></li>
                  <% end %>
                </ul>

            </div><!--/.nav-collapse -->
          </div><!-- /.navbar-inner -->
        </div><!-- /.navbar -->

      </div> <!-- /.container -->
    </div><!-- /.navbar-wrapper -->


